@{
    //ViewData["productsame"] = products;
}

@model (List<ProductDTO> V_Product, List<string> V_ProductCode, List<int> V_SameProductCount)


<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card corona-gradient-card">
            <div class="card-body py-0 px-0 px-sm-3">
                <div class="row align-items-center">
                    <div class="col-4 col-sm-3 col-xl-2">
                        <img src="~/template/assets/images/generali.png" class="gradient-corona-img img-fluid" alt="">
                    </div>
                    <div class="col-5 col-sm-7 col-xl-8 p-0">
                        <h4 class="mb-1 mb-sm-0">Generali Case</h4>
                        <p class="mb-0 font-weight-normal d-none d-sm-block">ürün satış ve stok takip !</p>
                    </div>
                    <div class="col-3 col-sm-2 col-xl-2 ps-0 text-center">
                        <a href="http://localhost:51686/Service1.svc?singleWsdl" target="_blank"><button class="btn btn-outline-light btn-rounded get-started-btn">Web Services - WSDL Link</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table" id="orderTable" style="color:wheat !important;">
                        <thead>
                            <tr>
                                <th>
                                    <div class="badge badge-outline-success">Product Code</div>
                                </th>
                                <th> Product Name </th>
                                <th> Product Price </th>
                                <th> Start Date </th>
                                <th> Stock </th>
                                <th> Delete </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.V_Product)
                            {
                                <tr>
                                    <td>
                                        <span class="ps-2">@item.ProductCode.Code</span>
                                    </td>
                                    <td> @item.Name </td>
                                    <td> @item.Price </td>
                                    <td> @item.ProductCode.CreatedDate </td>
                                    <td><div class="badge badge-outline-danger">@item.ProductCode.Stock</div></td>
                                    <td><a class="btn btn-outline-light btn-rounded get-started-btn" data-id="@item.Id"
                                         asp-action="Delete" asp-route-productId="@item.Id">Delete</a></td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-5 mx-auto grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Product Code</h4>
                <div class="table-responsive">
                    <table class="table" style="color:wheat !important;">
                        <thead>
                            <tr>
                                <th>
                                    <div class="badge badge-outline-success">Product Code</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.V_ProductCode)
                            {
                                <tr>
                                    <td>
                                        <span class="ps-2">@item</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-5 mx-auto grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Stock Status</h4>
                <div class="table-responsive">
                    <table class="table"  style="color:wheat !important;">
                        <thead>
                            <tr>
                                <th>
                                    <div class="badge badge-outline-success">Stock</div>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item2 in Model.V_SameProductCount)
                            {
                                <tr>
                                    <td>
                                        <span class="ps-2">@item2</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

